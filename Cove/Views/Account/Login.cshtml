@{
    ViewData["Title"] = "Home Page";
}
@model Cove.Web.Models.LoginModel
<div class="login-rectangle">
    <div class="login-rectangle-content">
        <span class="login-text">Login</span>
        <div class="row">
            <div class="col-md-4">
                <section>
                    <form asp-controller="Account" asp-action="LoginPost" id="account" method="post" autocomplete="off">
                        <hr class="line">
                        <div class="form-group">
                            <label asp-for="Email" class="input-field-label"></label>
                            <input asp-for="Email" placeholder="Email Address" class="input-field" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger validation_error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="input-field-label"></label>
                            <input asp-for="Password" placeholder="Password" class="input-field" style=" margin-bottom: 20px;" />
                            <span asp-validation-for="Password" class="text-danger validation_error"></span>
                            @if (ViewBag.ErrorMessage!=null)
                            {
                                <span class="text-danger validation_error">Invalid Credentials</span>
                            }
                        </div>
                        <div class="form-group inline">
                            <label asp-for="RememberMe" style="margin-right: 38%;">
                                <input class="checkbox" id="rememberMe" type="checkbox" asp-for="RememberMe" />
                                <span class="login-label-12">@Html.DisplayNameFor(m => m.RememberMe)</span>
                            </label>
                            <div class="login-label-12" style="text-align:right;color:#2c34aa;">Forgot Password?</div>
                        </div>
                        <div class="login-button">
                            <button type="submit" class="login-text login-text-white button">Login</button>
                        </div>
                    </form>
                </section>
            </div>
            <div class="external-login-center">
                @*<hr class="line1">*@
                <span class="external-login-center-providers-text">OR LOGIN WITH</span>
                @*<hr class="line1">*@
                <div class="external-login-providers-center">
                    <a class="facebook" href="@Url.Action("ExternalLoginProvider","Account",new { provider="Facebook"})"></a>
                    <a class="google" href="@Url.Action("ExternalLoginProvider","Account",new { provider="Google"})"></a>
                </div>
                <div class="login-label-14 footer-login-page">
                    <span>Don't have an account?</span>
                    <a asp-action="Register" style="color:#2c34aa">SignUp</a>
                </div>
            </div>
        </div>
    </div>
</div>

